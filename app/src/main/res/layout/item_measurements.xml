<?xml version="1.0" encoding="utf-8"?>
<!--同步信息页面-->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/shape_corner_6_white"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="MissingDefaultResource,MissingConstraints">
    <!--勾选框-->
    <CheckBox
        android:id="@+id/cv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_date"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:clickable="false"/>
    <!--测量时间-->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="left"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cv"
        android:text="@string/no_data"
        app:layout_constraintRight_toLeftOf="@+id/tv_measure"/>
    <!--测量项目-->
    <TextView
        android:id="@+id/tv_measure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="left"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_date"
        app:layout_constraintRight_toLeftOf="@+id/tv_ad"
        android:text="@string/no_data" />
    <!--检测人-->
    <TextView
        android:id="@+id/tv_ad"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_measure"
        app:layout_constraintRight_toLeftOf="@+id/tv_status"
        android:text="@string/no_data" />
    <!--同步状态-->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_ad"
        android:text="@string/no_data" />

</android.support.constraint.ConstraintLayout>