    <CheckBox
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_date"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:clickable="true"/>
    <!--测量时间-->
   <TextView
       android:id="@+id/tv_date"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:textColor="@color/titleColor80"
       android:gravity="center"
       android:textSize="20px"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toRightOf="@+id/cv"
       android:text="@string/no_data"
       app:layout_constraintRight_toLeftOf="@+id/tv_bedNo"/>
    <!--床号-->
    <TextView
        android:id="@+id/tv_bedNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_date"
        app:layout_constraintRight_toLeftOf="@+id/tv_ad"
        android:text="@string/no_data" />
    <!--住院号-->
    <TextView
        android:id="@+id/tv_ad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_bedNo"
        app:layout_constraintRight_toLeftOf="@+id/tv_name"
        android:text="@string/no_data" />
    <!--病人姓名-->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_ad"
        app:layout_constraintRight_toLeftOf="@+id/tv_recoudCount"
        android:text="@string/no_data" />
    <!--历史记录-->
    <TextView
        android:id="@+id/tv_recoudCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_status"
        android:text="@string/no_data" />
    <!--同步状态-->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/titleColor80"
        android:gravity="center"
        android:textSize="20px"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_recoudCount"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/no_data" />

