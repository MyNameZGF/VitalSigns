<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PatientDetailsActivity">
    <!--头部-->
    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:barStyle="night"
        app:leftTitle="@string/back"
        app:drawableSize="16sp"
        app:title="李-0"
        app:titleSize="18sp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="16dp">
            <!--历史统计-->
            <com.coorchice.library.SuperTextView
                android:id="@+id/measure_st_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cogradient_button"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:stv_isShowState="true"
                app:stv_state_drawable="@drawable/sy"
                app:stv_state_drawable_mode="left"
                app:stv_state_drawable_padding_left="0dp"
                app:stv_state_drawable_width="20dp"
                app:stv_state_drawable_height="20dp"
                android:paddingLeft="25dp"
                app:layout_constraintRight_toRightOf="parent"
                app:stv_pressBgColor="@color/item_bg"/>
            <!--删除-->
            <com.coorchice.library.SuperTextView
                android:id="@+id/measure_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:stv_isShowState="true"
                app:stv_state_drawable="@drawable/delete"
                app:stv_state_drawable_mode="left"
                app:stv_state_drawable_padding_left="0dp"
                app:stv_state_drawable_width="20dp"
                app:stv_state_drawable_height="20dp"
                app:stv_pressBgColor="@color/item_bg"
                android:paddingLeft="21dp"
                app:layout_constraintRight_toLeftOf="@+id/measure_st_history"
                android:layout_marginRight="20dp" />


        </android.support.constraint.ConstraintLayout>

    </com.hjq.bar.TitleBar>

    <!--内容-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/details_top"
        app:layout_constraintTop_toBottomOf="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_corner_4_white">
        <!--病人详情-->
        <TableLayout
            android:id="@+id/line_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            >
            <TextView
                android:id="@+id/details_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病人详情"
                android:textColor="@color/colorButton"
                android:textSize="25px"
                android:paddingLeft="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <!--第1行-->
            <TableRow
                android:id="@+id/row_01"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/row01_data_01"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="180dp"
                    android:text="床号：1-01"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row01_data_02"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="住院号：2981700"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"
                    />

                <TextView
                    android:id="@+id/row01_data_03"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="姓名：秦观昊"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

            </TableRow>
            <!--第2行-->
            <TableRow
                android:id="@+id/row_02"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/row02_data_01"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="性别：女 "
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row02_data_02"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="年龄：33岁"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row02_data_03"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="监测人：12344"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="@color/red"
                    android:textSize="24px"/>

            </TableRow>
            <!--第3行-->
            <TableRow
                android:id="@+id/row_03"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/row03_data_01"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="测量：2021-04-08 10:38:00"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row03_data_02"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:text="状态：未同步(账号错误)"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="@color/red"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row03_data_03"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="180px"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

            </TableRow>
        </TableLayout>
        <!--生命体征数据-->
        <TableLayout
            android:id="@+id/line_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp"
            >
            <TextView
                android:id="@+id/life_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生命体征数据"
                android:textColor="@color/colorButton"
                android:textSize="25px"
                android:gravity="left"
                android:paddingLeft="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <!--第1行-->
            <TableRow
                android:id="@+id/row_04"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/row04_data_01"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="体温：37.5℃"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row04_data_02"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="血氧：100%"
                    android:paddingLeft="40dp"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row04_data_03"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="血压：88/64mmHg"
                    android:paddingLeft="40dp"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

            </TableRow>
            <!--第2行-->
            <TableRow
                android:id="@+id/row_05"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/row05_data_01"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="脉率：86bpm"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row05_data_02"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="血糖(GLU)：7.8mmol/L"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row05_data_03"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="呼吸：18rpm"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

            </TableRow>
            <!--第3行-->
            <TableRow
                android:id="@+id/row_06"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/row06_data_01"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="大便次数：1 1/E"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row06_data_02"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:text="小便次数：1次/50ml"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/row06_data_03"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="40dp"
                    android:fontFamily="PingFangSC-Regular"
                    android:textColor="#222222"
                    android:textSize="24px"/>

            </TableRow>
        </TableLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>