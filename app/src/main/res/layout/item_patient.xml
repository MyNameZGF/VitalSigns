<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:translationZ="1dp"
    android:background="@drawable/shape_corner_6_white"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="MissingDefaultResource,MissingConstraints">

    <TextView
        android:id="@+id/tv_bedNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_corner_15_blue"
        android:text="@string/no_data"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_isMeasured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/no_data"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bedNo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bedNo"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/titleColor"
        android:text="@string/no_data"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bedNo"/>

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/titleColor"
        android:text="@string/no_data"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/titleColor"
        android:text="@string/no_data"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_sex"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"/>



    <TextView
        android:id="@+id/tv_testCountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/titleColor"
        android:text="@string/measureCount"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_measureCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/titleColor"
        android:text="@string/no_data"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_testCountTitle"
        app:layout_constraintTop_toTopOf="@+id/tv_testCountTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_testCountTitle"/>


    <TextView
        android:id="@+id/tv_testTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/titleColor"
        android:text="@string/measureTime"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_testCountTitle"/>

    <TextView
        android:id="@+id/tv_measureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/titleColor"
        android:text="@string/no_data"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_testTimeTitle"
        app:layout_constraintTop_toTopOf="@+id/tv_testTimeTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_testTimeTitle"/>

</android.support.constraint.ConstraintLayout>